# =============================================================================
# Streamlit Secrets Konfiguration - Immobilien-Transaktionsplattform
# =============================================================================
#
# Diese Datei enthält BEISPIELWERTE. Erstellen Sie eine Kopie als 'secrets.toml'
# und ersetzen Sie die Werte durch Ihre echten Credentials.
#
# WICHTIG: Die Datei 'secrets.toml' sollte NIEMALS in Git eingecheckt werden!
#          Sie ist bereits in .gitignore aufgeführt.
#
# Für Streamlit Cloud: Secrets werden über das Dashboard konfiguriert unter
# App Settings -> Secrets
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Datenbankverbindung
# -----------------------------------------------------------------------------
[database]
# Lokale Entwicklung
url = "postgresql://username:password@localhost:5432/notarplattform"

# Für Produktionsumgebungen (z.B. Heroku, AWS RDS, Supabase):
# url = "postgresql://user:password@host.example.com:5432/dbname?sslmode=require"

# Alternative Konfiguration mit einzelnen Parametern:
# host = "localhost"
# port = 5432
# database = "notarplattform"
# username = "notarplattform_user"
# password = "your_secure_password_here"

# -----------------------------------------------------------------------------
# API Keys für KI-Funktionen
# -----------------------------------------------------------------------------
[api_keys]
# OpenAI für GPT-basierte Textanalyse und Vertragsgenerierung
openai = "sk-your-openai-api-key-here"

# Anthropic Claude für alternative KI-Funktionen
anthropic = "sk-ant-your-anthropic-api-key-here"

# Google Cloud Vision für OCR (optional)
google_vision = "your-google-cloud-api-key-here"

# AWS Textract für OCR (optional)
aws_access_key = "your-aws-access-key"
aws_secret_key = "your-aws-secret-key"
aws_region = "eu-central-1"

# -----------------------------------------------------------------------------
# E-Mail-Konfiguration (für Benachrichtigungen)
# -----------------------------------------------------------------------------
[email]
smtp_server = "smtp.gmail.com"
smtp_port = 587
smtp_username = "your-email@gmail.com"
smtp_password = "your-app-specific-password"
from_address = "noreply@notarplattform.de"
from_name = "Notarplattform"

# -----------------------------------------------------------------------------
# Cloud Storage (für Dokumentenspeicherung)
# -----------------------------------------------------------------------------
[storage]
# AWS S3
s3_bucket = "notarplattform-documents"
s3_access_key = "your-s3-access-key"
s3_secret_key = "your-s3-secret-key"
s3_region = "eu-central-1"

# Alternative: Google Cloud Storage
# gcs_bucket = "notarplattform-documents"
# gcs_credentials_json = '{"type": "service_account", ...}'

# Alternative: Azure Blob Storage
# azure_connection_string = "your-azure-connection-string"
# azure_container = "documents"

# -----------------------------------------------------------------------------
# Authentifizierung & Sicherheit
# -----------------------------------------------------------------------------
[security]
# Secret Key für Session-Verschlüsselung (mindestens 32 Zeichen)
secret_key = "your-very-long-and-secure-secret-key-here-minimum-32-chars"

# JWT Token Konfiguration
jwt_algorithm = "HS256"
jwt_expiration_hours = 24

# Passwort-Hashing
bcrypt_rounds = 12

# -----------------------------------------------------------------------------
# Externe Services
# -----------------------------------------------------------------------------
[services]
# Immobilienscout24 API (für Marktdaten)
immoscout_client_id = "your-immoscout-client-id"
immoscout_client_secret = "your-immoscout-client-secret"

# Here Maps oder Google Maps (für Geo-Funktionen)
maps_api_key = "your-maps-api-key"

# Schufa/Bonität API (falls integriert)
# schufa_api_key = "your-schufa-api-key"

# -----------------------------------------------------------------------------
# Analytics & Monitoring
# -----------------------------------------------------------------------------
[analytics]
# Google Analytics
ga_tracking_id = "UA-XXXXXXXXX-X"

# Sentry für Error Tracking
sentry_dsn = "https://your-sentry-dsn@sentry.io/project-id"

# -----------------------------------------------------------------------------
# Entwicklungs-/Test-Einstellungen
# -----------------------------------------------------------------------------
[development]
# Debug-Modus (NIEMALS in Produktion aktivieren!)
debug = false

# Demo-Modus (zeigt Demo-Daten)
demo_mode = true

# Logging-Level: DEBUG, INFO, WARNING, ERROR
log_level = "INFO"

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
[rate_limits]
# Maximale Anfragen pro Minute pro Benutzer
requests_per_minute = 60

# Maximale Uploads pro Tag pro Benutzer
uploads_per_day = 100

# Maximale API-Aufrufe pro Tag
api_calls_per_day = 1000
